#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int x,y;
	    cin>>x>>y;
	    int time1=x+y;
	    int x1=x*2,x2=time1*4;
	    x1=500-x1;
	    x2=1000-x2;
	    int ans=x1+x2;
	    
	    int x4=y*4,x3=time1*2;
	    x4=1000-x4;
	    x3=500-x3;
	    int ans1=x3+x4;
	    
	    int fin=max(ans,ans1);
	    cout<<fin<<"\n";
	    
	}
	return 0;
}
