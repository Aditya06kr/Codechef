#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,x;
	    cin>>n>>x;
	    string str;
	    if(n<(2*x)-1){
	        cout<<-1<<"\n";
	        continue;
	    }
	    else{
	        
	        for(int i=0;i<n;i++){
	            str[.push_back('a');]
	        }
	        for(int i=1;i<x;i++){
	            str[i-1]=char(97+i);
	            str[n-i]=char(97+i);
	        }
	    }
	    cout<<str<<"\n";
	}
	return 0;
}
